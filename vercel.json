{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/audio/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=172800"
        }
      ]
    },
    {
      "source": "/(.+)\\.(woff|woff2|eot|ttf|otf)(\\?v=.*)?$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000, immutable"
        }
      ]
    },
    {
      "source": "/(.+)\\.(png|jpg|jpeg|gif|svg|webp|ico)(\\?v=.*)?$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.+)\\.(mp3|wav|ogg|m4a)(\\?v=.*)?$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=172800"
        }
      ]
    },
    {
      "source": "/(.+)\\.(css|js)(\\?v=.*)?$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.+)\\.(html|htm)(\\?v=.*)?$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],

  "env": {
    "VITE_AMAP_API_KEY": "@vite_amap_api_key"
  },

  "trailingSlash": false
}