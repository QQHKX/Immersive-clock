  "license": "MIT",
  "type": "module",
  "main": "electron/out/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/postbuild.mjs",
    "dev:electron": "tsc -p electron/tsconfig.json && electron ./electron/out/main.js",
    "build:electron": "tsc -p electron/tsconfig.json",
    "pack:win": "electron-builder --win --config electron-builder.yml",
    "release:win": "electron-builder --win --publish always --config electron-builder.yml",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,md,json}\"",
    "test": "vitest run"
  },
  "dependencies": {
    "marked": "^16.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^24.1.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/electron": "^1.6.0",
    "@vitejs/plugin-react": "^3.1.0",
    "terser": "^5.43.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-pwa": "^1.0.3",
    "workbox-window": "^7.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "vitest": "^1.6.0",
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  }
}